{
  "name": "@globalfishingwatch/map-styler",
  "version": "0.0.4",
  "description": "Tools to convert layer configuration to data structures needed in Mapbox GL GFW interactive maps ",
  "keywords": [
    "mapboxgl",
    "globalfishingwatch"
  ],
  "libraryName": "map-styler",
  "workerName": "fourwings-worker",
  "main": "dist/map-styler.umd.js",
  "module": "dist/map-styler.es5.js",
  "typings": "dist/types/map-styler.d.ts",
  "author": "@satellitestudio<contact@satellitestud.io>",
  "repository": "git@github.com:GlobalFishingWatch/map-styler.git",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=6.0.0"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint -c .eslintrc src/**/*.ts test/*.ts --fix",
    "prebuild": "rimraf ./dist/* && rimraf ./dist-workers/*",
    "build": "cross-env NODE_ENV=production tsc --module commonjs && rollup -c rollup.config.ts",
    "typedoc": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "gh-pages": "gh-pages -d docs",
    "prepublish": "npm run build",
    "publishdoc": "npm run typedoc && npm run gh-pages"
  },
  "dependencies": {
    "@mapbox/tilebelt": "^1.0.1",
    "@mapbox/vector-tile": "^1.3.1",
    "geojson-vt": "^3.2.1",
    "mapbox-gl": "^1.7.0",
    "memoize-one": "^5.1.1",
    "pbf": "^3.2.1",
    "rollup-plugin-babel": "^4.3.3",
    "vt-pbf": "^3.1.1"
  },
  "devDependencies": {
    "@satellitestudio/eslint-config": "^1.2.1",
    "@types/jest": "^24.0.25",
    "@types/mapbox-gl": "^1.7.0",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.0.7",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "jest-localstorage-mock": "^2.4.0",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup": "^1.29.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.2",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  }
}
